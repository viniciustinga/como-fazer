<%- include('../header') %>

<form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
  <div class="form-group">
    <label for="titulo">Título</label>
    <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Insira o nome do título" value="<%= publicacao.titulo %>">
  </div>
  <div class="form-group">
    <label for="conteudo">Conteúdo</label>
    <textarea class="form-control" name="conteudo" id="conteudo" placeholder="Insira o conteúdo"><%= publicacao.conteudo %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<%- include('../footer') %>